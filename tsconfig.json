{
    "compilerOptions": {
        "target": "esnext", // Specify ECMAScript target version
        "module": "commonjs", // Specify what module code generation
        "moduleResolution": "node", // Specify module code generation
        "outDir": "./dist", // The output directory
        "rootDir": "./src", // The root directory of input files
        "baseUrl": "./", // The base directory to resolve relative module names
        "paths": {
            "@/*": ["./src/*"] // Aliases for paths
        },
        "types": ["jest", "node"], // Typescript type checking
        "allowSyntheticDefaultImports": true, // Allows you to import a module via `import 'file'` instead of `import {default} from 'file'`
        "esModuleInterop": true, // Enables you to import a module via `import * as x from 'file'`
        "experimentalDecorators": true, // Allows you to use decorators
        "emitDecoratorMetadata": true, // Allows you to use decorators
        "forceConsistentCasingInFileNames": true, // Disallow inconsistent use of capitalization in identifiers
        "resolveJsonModule": true, // Allows you to import .json files
        "skipLibCheck": false, // Skip type checking of declaration files
        "strict": true // Enable all strict type-checking options
    }, // Compiler options
    "include": ["src/**/*.ts"], // Specify the files to be compiled
    "exclude": ["node_modules"] // Specify the files to be excluded from compilation
}