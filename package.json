{
  "name": "node-ts-starter",
  "version": "1.0.0",
  "description": "A modern Node.js TypeScript starter template with Jest testing",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node --env-file=.env dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "node clean.ts"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "starter",
    "template",
    "jest"
  ],
  "author": "Marc Tyson CLEBERT <contact@marctysonclebert.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.17.1",
  "dependencies": {
    "tsx": "^4.20.6"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.4",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2"
  }
}
